<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PenScan.Views.Project.ProjectDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ProjectProgressList" ItemsSource="{Binding ProjectPhases}" IsPullToRefreshEnabled="true" HasUnevenRows="True" RowHeight="60" >
                <ListView.ItemTemplate  >
                    <DataTemplate>
                        <ViewCell>
                            <Frame Padding="5" Margin="8" BackgroundColor="Maroon" HasShadow="true" IsClippedToBounds="true" >
                                <StackLayout Orientation="Horizontal"  HorizontalOptions="Fill" HeightRequest="60"  Margin="0,1,0,1" >
                                    <StackLayout Orientation="Vertical" HorizontalOptions="StartAndExpand">
                                        <Label Text="{Binding Name}" Font="Bold,17" HorizontalOptions="StartAndExpand" VerticalOptions="Start" />
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>